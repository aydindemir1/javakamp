package miniProjeAsalSayi;

public class Main {

	public static void main(String[] args) {
		
		int number = 1;
		boolean asalMi = true;
		
		if(number == 1) {
			System.out.println("sayı asal değildir.");
			return;
		}
		
		
		if(number < 1) {
			System.out.println("geçersiz sayı.");
		}
		
		for(int i = 2; i < number; i++) {
			if( number % i == 0) {
				asalMi = false;
			}
		}
		if (asalMi) {
			System.out.println("sayı asaldır.");
		}else {
			System.out.println("sayı asal değildir.");
		}
		

	}

}
